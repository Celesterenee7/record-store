<h1>All Sales Vinyl</h1>

<h3>Available Records</h3>

<form action="/albums">
  <div class="form-group">
    <label for="search">Search</label>
    <input id="search" name="search" class="form-control" type="text">
    <br>
    <label for="">Sort By Name</label>
    <input type="radio" name="sort" value="name">
    <br>
    <label for="">Sort By Artist</label>
    <input type="radio" name="sort" value="artist">
    <br>
    <label for="">No sort</label>
    <input type="radio" name="sort" value="nil">
    <br>
  </div>
  <button type="submit" class="btn-success">Go!</button>
</form>

<h3>Available Albums</h3>
<% if @albums.any? %>

<% @albums.each do |album| %>
<li><a href="/albums/<%= album.id %>"><%= album.name %></a><br><button type="button" class="btn-success" name="sell" value="sell<%= album.id %>">Buy Album</button></li>
<% end %>

<% else %>
<p>There are currently no records to display.</p>
<% end %>
<br>

<h3>Currently Sold Out</h3>
<% if @sold_out.any? %>
<% @sold_out.each do |album| %>
<p class="sold_out"><%= album.name %></p><br>
<% end %>

<% else %>
<p>There are currently no sold out records!</p>
<% end %>
<br>

<a href="/albums/new">Add a new album</a>
